@model EditCarYearProductViewModel

<form asp-controller="Car" asp-action="EditCarYearProduct" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden readonly />
    <div class="form-group">
        <label asp-for="YearProduct">Год выпуска автомобиля</label>
        <span asp-validation-for="YearProduct"></span>
        <input asp-for="YearProduct" value="@Model.YearProduct" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success m-2" value="Изменить" />
</form>

<a asp-controller="Car" asp-action="index" class="btn btn-primary m-2">Назад</a>