@model List<UserViewModel>


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        th, td {
            text-align: center !important;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <table class="table table-sm table-striped">
            <caption>Список пользователей</caption>
            <thead>
                <tr>
                    <th>ФИО</th>
                    <th>Номер телефона</th>
                    <th>Должность</th>
                    <th>Логин</th>
                
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.PositionOffice</td>
                        <td>@user.UserName</td>
                    </tr>

                }
            </tbody>
        </table>
        <div class="row m-2">
            <div class="col d-grid">
                <a asp-controller="Admin" asp-action="AddUser" class="btn btn-primary m-2">Добавить пользователя</a>
            </div>
        </div>
        <div class="row m-2">
            <div class="col d-grid">
                <a asp-controller="Admin" asp-action="DeleteUser" class="btn btn-primary m-2">Удалить пользователя</a>
            </div>
        </div>
        

    </div>
</div>