@model List<DriverViewModel>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        th, td {
            text-align: center !important;
        }
    </style>
</head>

<div class="container">
    <div class="row">
        <table class="table table-sm table-striped">
            <caption>Список Водителей</caption>
            <thead>
                <tr>
                    <th>ФИО водителя</th>
                    <th>Адрес проживания</th>
                    <th>Номер телефона</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var driver in Model)
                {
                    <tr>
                        <td>@driver.FullName</td>
                        <td>@driver.Adress</td>
                        <td>@driver.PhoneNumber</td>
                    </tr>

                }
            </tbody>
        </table>
        <div class="row m-2">
            <div class="col d-grid">
                <a asp-controller="Driver" asp-action="AddDriver" class="btn btn-primary">Добавить водителя</a>
            </div>
        </div>
        <div class="row m-2">
            <div class="col d-grid">
                <a asp-controller="Driver" asp-action="DeleteDriver" class="btn btn-primary">Удалить водителя</a>
            </div>
        </div>
        <div class="row m-2">
            <div class="col d-grid">
                <a asp-controller="Driver" asp-action="SeachDriver" class="btn btn-primary">Поиск водителя по ФИО</a>
            </div>
        </div>

    </div>
</div>
