@model SearchDriverViewModel

@{
    ViewData["Title"] = "Поиск водителя";
}
<h2>Поиск водителя</h2>

<form asp-controller="Driver" asp-action="SeachDriver" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="FullName">ФИО водителя</label>
        <span asp-validation-for="FullName" style="color:red;"></span>
        <input asp-for="FullName" value="@Model.FullName" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success m-2" value="Поиск" />
</form>

<a asp-controller="Driver" asp-action="Index" class="btn btn-primary m-2">Назад</a>