@model EditDriverPhoneNumberViewModel

<form asp-controller="Driver" asp-action="EditDriverPhoneNumber" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden readonly />
    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона водителя</label>
        <span asp-validation-for="PhoneNumber" style="color:red;"></span>
        <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success m-2" value="Изменить" />
</form>

<a asp-controller="Driver" asp-action="index" class="btn btn-primary m-2">Назад</a>