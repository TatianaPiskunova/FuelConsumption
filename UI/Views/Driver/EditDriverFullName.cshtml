@model EditDriverFullNameViewModel

<form asp-controller="Driver" asp-action="EditDriverFullName" method="post">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden readonly />
    <div class="form-group">
        <label asp-for="FullName">ФИО водителя</label>
        <span asp-validation-for="FullName"></span>
        <input asp-for="FullName" value="@Model.FullName" class="form-control" />
    </div>
    <input type="submit" class="btn btn-success m-2" value="Изменить" />
</form>

<a asp-controller="Driver" asp-action="index" class="btn btn-primary m-2">Назад</a>