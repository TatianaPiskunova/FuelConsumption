@model DriverViewModel

@{
    ViewData["Title"] = "Добавление водителя в базу";
}
<h2>Добавление водителя топлива в базу</h2>

<form asp-controller="Driver" asp-action="AddDriver">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="FullName">ФИО водителя</label>
        <span asp-validation-for="FullName"></span>
        <input asp-for="FullName" value="@Model.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Adress">Адрес проживания</label>
        <span asp-validation-for="Adress"></span>
        <input asp-for="Adress" value="@Model.Adress" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона</label>
        <span asp-validation-for="PhoneNumber"></span>
        <input asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
    </div>
    
    <div class="col d-grid">
        <input type="submit" class="btn btn-primary m-2" value="Добавить" />
    </div>
</form>
<div class="col d-grid">
    <a asp-controller="Driver" asp-action="Index" class="btn btn-primary m-2">Назад</a>
</div>
